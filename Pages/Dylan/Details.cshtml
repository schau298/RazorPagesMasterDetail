@page
@model RazorPagesMasterDetail.Pages.Dylan.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-color: antiquewhite;
    }
</style>
<body>
<h1>Details</h1>

<div>
    <h4>Books</h4>
    <hr />
    <div class="col-sm-12">
        <img src="~/images/@Html.DisplayNameFor(model => model.Books.Cover)" asp-append-version="true" alt="DB Images" style="width:300px;height:auto;" />
    </div>
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Summary)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Books.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>