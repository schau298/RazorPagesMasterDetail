@page
@model RazorPagesMasterDetail.Pages.Dylan.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var cover = "~/images/" + (Model.Books.Cover ?? "noimage.png");
}

<style>
    .detailsBox {
        border: 4px outset saddlebrown;
        background-color: peachpuff;
        text-align: left;
        padding: 7px 7px 7px 7px;
    }
    body {
        background-color: antiquewhite;
    }

    h1 {
        text-align: center;
        font-weight: bold;
        color: saddlebrown;
        font-size: 36px;
    }
    h2 {
        font-size: 30px;
        font-weight: bold;
        color: darkgoldenrod;
        text-shadow: 2px, 2px, 3px saddlebrown;
    }
      h3{
       font-size: 25px;
       color:gray;
       font-weight:lighter;
   }
    h4 {
        font-size: 20px;
        color: darkgoldenrod;
        font-weight: normal;
    }
</style>

<body>
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Books</h4>
        <hr />
        <div class="form-group row col-lg-9 offset-4">
            <img class="imageThumbnail" src="@cover" asp-append-version="true" />
        </div>
        <div class="detailsBox col-12">
           <h2>Date</h2>
            @Html.DisplayFor(model => model.Books.Date)
        </div>
        <div class="detailsBox col-12">
           <h2>Title</h2>
            @Html.DisplayFor(model => model.Books.Title)
        </div>
        <div class="detailsBox col-12">
            <h2>Author</h2>
            @Html.DisplayFor(model => model.Books.Author)
        </div>
        <div class="detailsBox col-12">
           <h2>Genre</h2>
            @Html.DisplayFor(model => model.Books.Genre)
        </div>
        <div class="detailsBox col-12">
         <h2>Summary</h2>
            @Html.DisplayFor(model => model.Books.Summary)
        </div>
    </div>

    <div>
    <form method="post">
        <input type="hidden" asp-for="Books.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
    </div>
</body>