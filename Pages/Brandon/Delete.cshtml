@page
@model RazorPagesMasterDetail.Pages.Brandon.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    .btn-style {
        padding: 30px;
        border-radius: 50%;
        float: right;
        background-color: #EA80FC;
        color: white;
    }

        .btn-style:hover {
            color: #343A40;
        }

    .btn-crud {
        padding: 25px;
        border-radius: 50%;
        background-color: #EA80FC;
        color: white;
    }

        .btn-crud:hover {
            color: #343A40;
        }

    body {
        background-color: #606368;
    }
</style>


<h1 class="text-center" style="color: #EA80FC;">Delete Literature</h1>

<h3>Are you sure you want to delete this?</h3>
<div style="background-color: #343A40;" class="text-light m-2 pl-1 pt-2">
    <h4 class="m-1">Book: @Html.DisplayFor(model => model.Books.Title)</h4>
    <hr />
    <dl class="row m-2" >
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Date):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Title):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Author):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Genre):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Genre)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Cover):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Cover)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Summary):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Summary)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Books.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn-crud">Back to List</a>
    </form>
</div>
