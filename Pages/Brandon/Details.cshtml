@page
@model RazorPagesMasterDetail.Pages.Brandon.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    .btn-style {
        padding: 30px;
        border-radius: 50%;
        float: right;
        background-color: #EA80FC;
        color: white;
    }

        .btn-style:hover {
            color: #343A40;
        }

    .btn-crud {
        padding: 25px;
        border-radius: 50%;
        background-color: #EA80FC;
        color: white;
    }

        .btn-crud:hover {
            color: #343A40;
        }

    body {
        background-color: #606368;
    }
</style>

<h1 class="text-center" style="color: #EA80FC;">Literature Details</h1>

<div  style="background-color: #343A40;" class="text-light">
    <h4 class="m-2 pt-2 pl-1">Book: @Html.DisplayFor(model => model.Books.Title)</h4>
    <hr />
    <dl class="row m-2">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Genre)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Cover)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Cover)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Summary)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Books.ID" class="btn btn-crud">Edit</a>
    <a asp-page="./Index" class="btn btn-crud">Back to List</a>
</div>
