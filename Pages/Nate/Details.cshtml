@page
@model RazorPagesMasterDetail.Pages.Nate.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row w-100 border border-dark rounded m-2 p-4">
    <div class="row w-100">
        <div class="col-6" style="background-image:url(@Model.Books.Cover); background-size:contain; background-repeat:no-repeat; background-position:center;">
        </div>
        <div class="col-6">
            <h4 class="text-primary">@Model.Books.Title</h4>
            <h5 class="text-primary">@Model.Books.Author</h5>
            <h5 class="mt-2">Genres</h5>
            <p class="text-primary">@Model.Books.Genre</p>
            <h5 class="">Summary</h5>
            <p class="text-primary">@Model.Books.Summary</p>
        </div>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Books.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
